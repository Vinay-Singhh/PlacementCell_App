<% if(locals.user){ %>
    <div class="container mt-4">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 order-md-last ">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-black">List of Students</span>
                </h4>
                <table class="table table-bordered  mb-3">

                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>College</th>
                            <th>Status</th>
                            <th>Batch</th>
                            <th>DSA</th>
                            <th>Web</th>
                            <th>React</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (each of students) { %>
                            <tr>
                                <td>
                                    <%= each.name %>
                                </td>
                                <td>
                                    <%= each.email %>
                                </td>
                                <td>
                                    <%= each.college %>
                                </td>
                                <td>
                                    <%= each.placement_status %>
                                </td>
                                <td>
                                    <%= each.batch %>
                                </td>
                                <td>
                                    <%= each.dsa_score %>
                                </td>
                                <td>
                                    <%= each.webD_score %>
                                </td>
                                <td>
                                    <%= each.react_score %>
                                </td>
                            </tr>

                            <% } %>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6 col-lg-6 ">
                <h4 class="mb-3">New Student Form</h4>
                <form class="needs-validation" method="post" action="../students/create">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="name" class="form-label">Student name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="col-6">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="you@example.com"
                                name="email" required>
                        </div>

                        <div class="col-md-6">
                            <label for="batchName" class="form-label">Batch Name</label>
                            <input type="text" class="form-control" id="batchName" name="batch" required>
                        </div>

                        <div class="col-12">
                            <label for="collegeName" class="form-label">College Name</label>
                            <input type="text" class="form-control" id="collegeName" name="college" required>
                        </div>

                        <div class="col-md-12">
                            <label for="placementStatus" class="form-label">Placement Status</label>
                            <input type="text" class="form-control" id="placementStatus" placeholder="Placed/Not placed"
                                name="placement_status" required>
                        </div>

                        <div class="col-md-4">
                            <label for="dsa" class="form-label">DSA Score</label>
                            <input type="number" class="form-control" id="dsa" name="dsa_score" required>
                        </div>

                        <div class="col-md-4">
                            <label for="web" class="form-label">Web Score</label>
                            <input type="number" class="form-control" id="web" name="webD_score" required>
                        </div>

                        <div class="col-md-4">
                            <label for="react" class="form-label">React Score</label>
                            <input type="number" class="form-control" id="react" name="react_score" required>
                        </div>
                    </div>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">Add New Student</button>
                </form>
            </div>
        </div>
    </div>
<% } %>